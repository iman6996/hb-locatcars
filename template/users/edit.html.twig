{% extends "base.html.twig" %}

{% block title %}
Formulaire utilisateur
{% endblock %}

{% block content %}
    <div class="container">
        <h1>Formulaires</h1>
        <form action="{{env.base_path}}/user/edit/{{user.id}}" method="POST">
            <div class="row mb-3">
                <div class="col">
                    <input id="formLastname" name="lastname" type="text" class="form-control" placeholder="Lastname" value="{{user.lastname}}">
                </div>
                <div class="col">
                    <input id="formFirstname" name= "firstname" type="text" class="form-control" placeholder="Firstname" value="{{user.firstname}}">
                </div>
                <input class="btn-primary" type="submit" value="Modifier">
            </div>
        </form>
    </div>
    {% endblock  %}